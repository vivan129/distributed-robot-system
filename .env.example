# ========================================
# Environment Configuration Template
# ========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ========================================
# API Keys
# ========================================

# Google Gemini API Key (REQUIRED)
# Get your key from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# ========================================
# Flask Configuration
# ========================================

# Flask Secret Key (REQUIRED for production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=change_this_to_a_random_secret_key_in_production

# Flask Debug Mode (Set to False in production)
FLASK_DEBUG=False

# Flask Environment
FLASK_ENV=production

# ========================================
# CORS Configuration
# ========================================

# Allowed CORS Origins (comma-separated)
# For development: * (allows all origins)
# For production: specify exact origins
# Example: http://192.168.1.100:5000,http://localhost:5000
CORS_ALLOWED_ORIGINS=*

# ========================================
# Logging Configuration
# ========================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable file logging
LOG_TO_FILE=True

# Log file path (relative to project root)
LOG_FILE=logs/robot.log

# ========================================
# Optional: Advanced Settings
# ========================================

# Server host (0.0.0.0 = all interfaces)
SERVER_HOST=0.0.0.0

# Server port
SERVER_PORT=5000

# SocketIO async mode (threading, eventlet, gevent)
SOCKETIO_ASYNC_MODE=threading

# ========================================
# Optional: Audio Settings
# ========================================

# Audio input device index (null = default)
AUDIO_INPUT_DEVICE=

# Audio output device index (null = default)
AUDIO_OUTPUT_DEVICE=

# ========================================
# Optional: Camera Settings Override
# ========================================

# Camera device ID (overrides config file)
CAMERA_DEVICE_ID=0

# ========================================
# Development Settings
# ========================================

# Enable debug features
DEBUG_MODE=False

# Enable verbose logging
VERBOSE=False

# Skip hardware initialization (for testing on non-Pi systems)
SKIP_HARDWARE_INIT=False